@import 'styles/theme';

.lobby {
  &.container {
    margin-top: 3em;
    min-height: 250px;
    @include center;
    flex-direction: column;
  }
  &.form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 200%;
	margin-top: 0.5em;
    max-width: 25em;
    height: 20em;
    font-size: 22px;
    font-weight: 400;
    padding-left: 30px;
    padding-right: 30px;
    border-radius: 0.75em;
    background-color: $background;
    transition: opacity 0.5s ease, transform 0.5s ease;
    box-shadow: $dropShadow;
  }
  &.field {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  
  &.button-container {
    display: flex;
    justify-content: center;
    margin-top: 0.8em;
	margin-bottom: 0.8em;
  }
}