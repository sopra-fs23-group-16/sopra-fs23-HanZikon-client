@import 'styles/theme';

.login {
  &.container {
    margin-top: 2em;
    min-height: 400px;
    @include center;
    flex-direction: column;
  }
  &.form {
    display: flex;
    flex-direction: column;
    justify-content: center;
    width: 60%;
    max-width: 30em;
    height: 22em;
    font-size: 18px;
    font-weight: 300;
    padding-left: 35px;
    padding-right: 35px;
    border-radius: 0.75em;
    background-color: $background;
    transition: opacity 0.5s ease, transform 0.5s ease;
    box-shadow: $dropShadow;
  }
  &.field {
    display: flex;
    flex-direction: column;
    justify-content: center;
  }
  &.input {
    height: 35px;
    padding-left: 15px;
    margin-left: -4px;
    border: none;
    border-radius: 0.75em;
    margin-bottom: 15px;
    background: transparentize(white, 0.85);
    color: $textColor;
  }
  &.label {
    color: $textColor;
    margin-bottom: 12px;
    text-transform: lowercase;
    font-weight: 350;
	justify-content: center;
  }
  &.button-container {
    display: flex;
    justify-content: center;
    margin-top: 1em;
  }
}